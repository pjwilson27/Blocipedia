<div class="container">
    <% if current_user.admin? || current_user.premium? %>
    <div class="TBD">
        <%= form_tag wiki_collaborators_path(wiki_id: @wiki.id), method: :post do %>
            <%= text_field_tag :email %>
            <%= hidden_field_tag :wiki_id, @wiki.id %>
            <%= submit_tag "Add As A Collaborator" %>
        <% end %>
        
        </br>
        <div class="collab-container">
            <h3>Currently Collaborating:</h3>
                <% if @wiki.user.any? %>
                    <% @wiki.collaborators.each do |collab| %>
                        <p><%= collab.user.email %></p>
                    <% end %>
                <% end %>
                <% if @wiki.user_id == current_user.id %>
                    <%= link_to "X", wiki_collaborator_path, method: :delete, class: 'glyphicon glyphicon-remove', data: {confirm: 'Are you sure you want to delete this collaborator?'}%>
        </div>
    <% end %>
    </div>
    <% end %>
</div>